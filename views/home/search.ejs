<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Sales Management System</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/shop-item.css" rel="stylesheet">

  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">SALES KEEPER</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href="#">Home
                <span class="sr-only">(current)</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Report</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container-fluid">

      <div class="row">

        <div class="col-lg-3">
          <h3 class="my-4" align="center"><%=user[0].shopName%></h3>
          <div class="list-group">
            <a href="/home" class="list-group-item active">Home</a>
            <a href="/sales" class="list-group-item">Add New Sales</a>
          <a href="/sales" class="list-group-item">Sales History</a>
          <a href="/categories" class="list-group-item">Manage Category</a>
          <a href="/products" class="list-group-item">Manage Product</a>
          </div>
        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9" id="blabla">

            <form method="post">
              <div class="row">
                <div class="col-12"  >
                  <div class="col-3">
                    <label>Search by</label>
                  <select class="form-control dropup"   name="drop" >
                    <option value="pName">Product Name</option>
                     <option value="cName">Customer Name</option>
                     <option value="sId">Sale Id#</option>
                     <option value="pId">Product Id#</option>
                     <option value="cId">Category Id#</option> 
                   </select>  </div><br>
                 </div>
               </div>
              <div class="row">

                  <div class="col-9">
                      <div class="form-group">
                        <label>Type below to search</label>
                        <input type="text" class="form-control" name="search" id="cName" placeholder="Search . . .">
                      </div>
                  </div>


                <div class="col-3" id="serchBtn">
                    <br>
                    <button name="button" class="btn btn-primary btn-block" type="submit" >Search</button> <br>
                </div>


              </div>
            </form>


            <table class="table table-bordered table-dark" id="table">
              <thead>
                <tr>
                    <th scope="col">Sale ID#</th>
                    <th scope="col">Product ID#</th>
                    <th scope="col">Product Name</th>
                  <th scope="col">Category ID#</th>
                  <th scope="col">Customer Name</th>
                  <th scope="col">Price</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Date</th>
                </tr>
              </thead>

              <tbody>
                   <% for(var i = 0; i < searchInfo.length; i++){ %>
<tr>
    <td><%= searchInfo[i].saleId %></td>
    <td><%= searchInfo[i].productId %></td>
    <td><%= searchInfo[i].productName %></td>
    <td><%= searchInfo[i].categoryId %></td>
    <td><%= searchInfo[i].customerName %></td>
    <td><%= searchInfo[i].price %></td>
    <td><%= searchInfo[i].price %></td>
    <td><%= searchInfo[i].date %>/<%= searchInfo[i].month %>/<%= searchInfo[i].year %></td>
</tr>
    <% } %>
              </tbody>
            </table>


        </div>
        <!-- /.col-lg-9 -->

      </div>

    </div>
    <!-- /.container -->

    <!-- Footer -->
    <footer class="py-5 bg-dark" id="myfooter">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; IDK 2018</p>
      </div>
      <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

</html>
